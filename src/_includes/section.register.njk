{% for item in collections.sections %}
  {% if item.data.type === 'register' %}
    <div id="register" class="w-full min-h-screen flex flex-col justify-center items-center bg-gray-900">
      <div class="self-center text-center w-full xl:w-1/3 px-4 sm:px-0">
        <h2 class="font-bold tracking-widest text-gray-200 text-4xl mb-4">{{ item.data.title }}</h2>
        <div class="font-light text-gray-400 text-xl">
          {{ item.templateContent | safe }}
        </div>
        <form class="w-full max-w-lg my-20 mx-auto" action="https://api.web3forms.com/submit" method="post" id="registration-form" target="_blank" validate>
          <div class="flex flex-wrap items-stretch border-b border-thrivedark py-2 space-y-2">
            <input type="hidden" name="access_key" value="c3104c52-ab6b-4b73-b6f7-1df9161e8651">
            <input class="appearance-none grow bg-gray-800 border border-transparent w-[49%] text-gray-200 focus:outline-none focus:bg-gray-200 focus:text-gray-800 focus:border-gray-400 py-2 px-3" type="name" value="" name="name" placeholder="Your Name" aria-label="Name" required>
            <input class="ml-2 appearance-none grow bg-gray-800 border border-transparent w-[49%] text-gray-200 focus:outline-none focus:bg-gray-200 focus:text-gray-800 focus:border-gray-400 py-2 px-3" type="email" value="" name="name" placeholder="you@example.com" aria-label="Email Address" required>
            <textarea class="appearance-none bg-gray-800 border border-transparent w-full text-gray-200 focus:outline-none focus:bg-gray-200 focus:text-gray-800 focus:border-gray-400 py-2 px-3"  name="message" required></textarea>
            <button class="ml-auto flex-shrink-0 bg-thrivedark border-thrivedark hover:bg-gray-800 hover:text-purple-600 border text-gray-200 py-2 px-4" type="submit" name="subscribe">
              Contact Us
            </button>
          </div>
        </form>
      </div>
    </div>
  {% endif %}
{% endfor %}