{% for item in collections.sections %}
  {% if item.data.type === 'team' %}
    <div id="team" class="w-full min-h-screen flex flex-col justify-center items-center py-12">
      <div class="self-center text-center w-full sm:w-2/3 xl:w-1/2 px-4 sm:px-0">
        <h2 class="font-bold tracking-wider text-thrivedark text-4xl mb-4">{{ item.data.title }}</h2>
      </div>
          <div class="w-full sm:w-2/3 flex flex-row flex-no-wrap px-4 sm:px-8 py-6 sm:py-12">
            <div class="w-1/3 xl:w-1/4">
              <div class="w-full flex flex-col justify-center items-center">
                <a href="{{ item.data.url1 }}" target="_blank" rel="noopener"><img src="{{ env.baseUrl }}img/{{ item.data.headshot1 }}" alt="{{ item.data.person1 }}" class="items-center"></a>
              </div>
            </div>
            <div class="w-2/3 xl:w-3/4 pl-5">
              <a class="text-gray-800 font-bold hover:text-thrivelight text-2xl text-center w-full no-underline sm:w-auto sm:pr-4 py-2 sm:py-1" href="{{ item.data.url1 }}" target="_blank" rel="noopener">{{ item.data.person1 }}</a>  
              <div class="font-light text-gray-800 text-xl">
                {{ item.data.content1 }}
              </div>
              <a class="text-gray-800 font-bold hover:text-thrivelight text-lg text-center w-full no-underline sm:w-auto sm:pr-4 py-2 sm:py-1" href="{{ item.data.url1 }}" target="_blank" rel="noopener"> <span class="text-thrivelight">&raquo;</span> Linkedin profile</a>
            </div>
          </div>
          <div class="w-full sm:w-2/3 flex flex-row flex-no-wrap px-4 sm:px-8 py-6 sm:py-12">
            <div class="w-1/3 xl:w-1/4">
              <div class="w-full flex flex-col justify-center items-center">
                <a href="{{ item.data.url2 }}" target="_blank" rel="noopener"><img src="{{ env.baseUrl }}img/{{ item.data.headshot2 }}" alt="{{ item.data.person2 }}"></a>
              </div>
            </div>
            <div class="w-2/3 xl:w-3/4 pl-5">
              <a class="text-gray-800 font-bold hover:text-thrivelight text-2xl text-center w-full no-underline sm:w-auto sm:pr-4 py-2 sm:py-1" href="{{ item.data.url1 }}" target="_blank" rel="noopener">{{ item.data.person2 }}</a>
              <div class="font-light text-gray-800 text-xl">
                {{ item.data.content2 }}
              </div>
              <a class="text-gray-800 font-bold hover:text-thrivelight text-lg text-center w-full no-underline sm:w-auto sm:pr-4 py-2 sm:py-1" href="{{ item.data.url2 }}" target="_blank" rel="noopener"> <span class="text-thrivelight">&raquo;</span> Linkedin profile</a>
            </div>
          </div>
    </div>
  {% endif %}
{% endfor %}